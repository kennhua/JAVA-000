<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="springXml1" class="spring.springbean.SpringXml1">
        <property name="value" value="getter/setter"></property>
    </bean>

    <bean id="springXml2" class="spring.springbean.SpringXml2">
        <constructor-arg value="constructor"></constructor-arg>
    </bean>

    <context:component-scan base-package="spring.springbean"/>

</beans>